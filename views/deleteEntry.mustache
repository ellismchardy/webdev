<html>
<head>
  {{>header}}
      <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <nav class="navbar">
        <div class="navdiv">
            <div class="logo"><a href="#">Harmony Hall</a></div>
            <ul class="nav-items">
                {{^user}}
                <li> <a href="/">Home</a> </li>
                <li> <a href="/about">About Us</a> </li>
                <li> <a href="/availability">Availability</a> </li>
                <li><a id="login" href="/login">Log In</a></li>
                {{/user}}
                {{#user}}
                <li> <a href="/">Home</a> </li>
                <li> <a href="/about">About Us</a> </li>
                <li> <a href="/new">Add Event</a> </li>
                <li><a href="/delete">Delete Event</a></li>
                <li><a href="/edit">Edit Event</a></li>
                <li><a href="/availability">Availability</a></li>
                <li><a id="logout" href="/logout">Log Out</a></li>
                <li><a id="register" href="/register">Register</a></li>
                {{/user}}
            </ul>
        </div>
    </nav>

  <div class="about-container"
  <div class="about-section">
    <h2 class="about-section-heading"> <strong>Delete an Event</strong></h2>

  </div>

  <div class="form-container">
        <div class="form-content">
            <form action="/delete" method="POST">
                <label for="entryToDelete">Select Entry to Delete:</label>
                <select id="entryToDelete" name="entryToDelete">
                    {{#entries}}
                    <option value="{{_id}}">{{eventTitle}} on {{eventDate}}</option>
                    {{/entries}}
                </select>
                <br>
                <button type="submit" class="btn btn-danger">Delete Entry</button>
            </form>
        </div>
    </div>
    
  </form>

   {{#entries}}
   <div class="delete-container"
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">{{eventTitle}}</h4>
            <p class="card-text">
                <strong> Price: </strong> {{eventPrice}} | <strong> Date: </strong> {{eventDate}} | <strong> For More Info, Contact: </strong> {{contactNumber}} 
            </p>
        </div>
        <div class="card-footer">
            Published by <a href="/posts/{{author}}">{{author}}</a> , on {{published}}
        </div>
    </div>
    </div> 
    {{/entries}}
    {{^entries}}
    No entries yet.
    {{/entries}}




</body>
</html>
